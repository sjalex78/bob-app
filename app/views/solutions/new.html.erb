<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Add a product to your <%= @list.name %> list</h3>
        <%= simple_form_for [@list, @solution] do |f| %>
          <%= f.association :product, prompt: 'Select a product', input_html: { class: 'select2' } %>
          <%= f.submit "Add Product", class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
