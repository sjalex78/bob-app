<!-- Button trigger modal -->
<button type="button" class=" text-white font-bold py-2 text-sm   btn" data-toggle="modal" data-target='#<%= "saveModal#{product.id}" %>'>
  ADD
</button>

<!-- Modal -->
<div class="modal fade" id='<%= "saveModal#{product.id}" %>' tabindex="-1" role="dialog" aria-labelledby='<%= "saveModal#{product.id}" %>' aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id='<%= "saveModal#{product.id}" %>'>Select List</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% current_user.lists.each do |list| %>
          <%= link_to list_product_solutions_path(list, product) , method: :post do %>
            <div><%= list.name %></div>
          <% end %>
        <% end %>
      </div>
      <div class="modal-footer">
        <%# <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button> %>
      </div>
    </div>
  </div>
</div>
