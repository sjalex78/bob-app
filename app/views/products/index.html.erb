<h1>Products</h1>
<div class= "row">
  <div class="d-inline-flex p-2" >
  <% @categories.each do |category| %>
    <%= link_to(
      "#{category.name}-#{category.taggings_count}",
      { :action => :index, :category => category.name },
        :class => "text-uppercase card-text badge badge-pill badge-secondary"
        ) %>
  <% end %>
  <%= link_to(
    "Show All",
    { :action => :index },
    :class => "text-uppercase card-text badge badge-pill badge-secondary"
  ) %>
  </div>
</div>

<div class ="row">
  <div class="d-inline-flex p-2"><%== pagy_bootstrap_nav(@pagy)%></div>
</div>

<%= render partial: "product", collection: @products %>

<%= link_to("Add Product", new_product_path, class: "btn btn-primary") %>
