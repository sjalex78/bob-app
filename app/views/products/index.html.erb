<h1>Products</h1>
<%== pagy_bootstrap_nav(@pagy) %>
<div class="row">
  <div class="col-sm-6">
  <% @products.each do |product| %>
  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title"><%=link_to product.name,  product.url %></h5>
      <p class="card-text"><%= product.url %></p>
      <p class= "card-title">Categories</p>
      <% product.category_list.each do |x| %>
      <p class =" text-uppercase card-text badge badge-pill badge-info"><%= x %></p>
      <%end%>
      <div><%= link_to("Remove", product_path(product.id), method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure?"}) %></div>
    </div>
  </div>
  <% end %>
  </div>
</div>
<%= link_to("Add Product", new_product_path, class: "btn btn-primary") %>
