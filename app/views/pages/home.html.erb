    <div class="h-24">
    </div>

    <% @categories.each do |category| %>
      <div class="min-w-screen over flex flex-wrap place-content-evenly items-center justify-center px-2 py-2">
        <div class="w-2/3 mx-auto rounded-lg bg-white shadow-sml px-5 pt-5 pb-5">
          <div class="w-1/2 pt-1 pb-5">
            <%= render partial: "shared/category", locals: { category: category} %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
