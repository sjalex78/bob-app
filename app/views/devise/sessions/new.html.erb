<div class="min-h-screen bg-gradient-to-t from-pink-200 to-purple-400 p-0  flex justify-center">
    <div class="max-w-sm rounded overflow-hidden shadow-md h-1/3 w-2/3 pt-3 ">
      <div class="px-6 py-4">
      <div class="font-bold text-xl mb-2 text-white">Login to BOB</div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "bg-purple-500 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded-full"%>
  </div>
<% end %>
<div class ="h-10 pt-3">
<%= render "devise/shared/links" %>
</div>
</div>
</div>
</div>
</div>
</div>
