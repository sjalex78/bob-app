<div class="min-h-screen bg-gradient-to-t from-pink-200 to-purple-400 p-0 flex justify-center text-white">
  <div class="max-w-sm rounded overflow-hidden shadow-md h-1/3 w-2/3 pb-3 mt-3 bg-gradient-to-t from-purple-400 to-purple-300">
    <div class="px-6 py-4">
      <h1 class="animate-pulse font-bold text-xl mb-2 text-center">Login to BOB</h1>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs font-serif text-md">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <div class="text-sm">
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
        </div>
        <h1 class="form-actions text-center">
          <%= f.button :submit, "Log in", class: "bg-purple-500 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded-full w-full shadow-md"%>
        </h1>
      <% end %>
      <div class ="h-10 py-3 font-serif text-sm text-center">
        <%= render "devise/shared/links", classes: "py-1" %>
      </div>
    </div>
  </div>
</div>
