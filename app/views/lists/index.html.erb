<h1>Lists</h1>

  <div class ="row">
    <div class="d-inline-flex p-2"><%== pagy_bootstrap_nav(@pagy)%></div>
  </div>

<div class="container">
<% @lists.each do |list| %>
  <div class="box border">
    <div class="product-img">
      <img src="https://placedog.net/100/100?random" width="100" alt="" />
    </div>
    <div class="product-info">
      <h1><%= list.name %></h1>
      <p class="price">URL:<%=link_to list.name %></p>
      <p class="description"><p>My list Bio</p>
      <br /><br />
          <%= link_to("Review", edit_list_path(list.id), class: "btn btn-secondary") %>
          <%= link_to("Remove", list_path(list.id), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger") %>
          <%= link_to("See More", list_path(list.id), class: "btn btn-primary") %>
    </div>
  </div>
  <% end %>
</div>
   <br /><br />

<%= link_to("Add list", new_list_path, class: "btn btn-primary") %>
