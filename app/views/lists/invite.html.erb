<div class="min-h-screen bg-gradient-to-t from-pink-200 to-purple-400 p-0  flex justify-center">
    <div class="max-w-sm rounded overflow-hidden shadow-md h-1/3 w-2/3 pt-3 ">
      <div class="px-6 py-4">
<% resource = User.new %>
<% resource_name = :user %>

<div class="font-bold mt-2 text-xl mb-2 text-white ">Sign up to Accept Le Wagon Pitch Night Invite</div>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input(
        :email,
        required: true,
        autofocus: true,
        input_html: { autocomplete: "email" }
      ) %>
    </div>
    <input type="hidden" name="passwordless_signup" value="true">
    <input type="hidden" name="list_invite_token" value="<%= params[:list_invite_token] %>">
    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: "bg-purple-700 hover:bg-purple-500 text-white font-bold py-2 px-4 rounded-full"  %>
    </div>
  <% end %>
  <%# <%= link_to "Log in", new_session_path(resource_name) %>
</div>

    </div>
  </div>
</div>
