<div class="bg-gradient-to-t from-pink-200 to-purple-400 pt-20">
  <h1 class="pl-10 font-bold text-lg bg-transparent uppercase">My <%= @list.name %> List</h1>
    <div class="ml-60 ">
      <div class="row justify-content-center">
        <div class="col-4" data-toggle="modal" data-target='#<%= "new#{@list.id}" %>'>
          <i class="fas fa-user-plus fa-2x text-pink-200 hover:text-purple-900" data-toggle="tooltip" type="button" data-placement="top" title="Add a new contributor"></i>
        </div>
        <div class="col-4">
          <%= link_to(
          new_list_solution_path(@list),
          class: "w-full text-center"
          ) do %>
          <i class="fas fa-plus fa-2x text-pink-200 hover:text-purple-900" data-toggle="tooltip" type="button" data-placement="top" title="Add a new product"></i>
          <% end %>
        </div>

        <div class="col-4">
          <%= link_to(
          list_contributors_path(list_id:@list.id),
          class: "w-full text-center"
          ) do %>
          <i class="fas fa-user fa-2x text-pink-200 hover:text-purple-900" data-toggle="tooltip" type="button" data-placement="top" title="See Your Contributors"></i>
          <% end %>
        </div>
      </div>
    </div>

  <%= render "shared/lgcontainer", classes: "p-4 flex flex-col items-center" do %>
    <%= render partial: "products/product", collection: @products, classes: "mb-8" %>
  <% end %>
      <div class= "h-48"></div>
</div>



